@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert-success col-5">
        @TempData["MensagemSucesso"]

    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert-danger col-5">
        @TempData["MensagemErro"]

    </div>
}


@model List<AlunoModel>

<div class=" text-left">
    <div>
        <h1>Dados Dos Alunos</h1>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Idade</th>
                <th scope="col">numero</th>
                <th scope="col">email</th>
                <th scope="col">cep</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                foreach (AlunoModel aluno in Model)
                {
                    <tr>

                        <td>@aluno.Nome</td>
                        <td>@aluno.Idade</td>
                        <td>@aluno.Contato</td>
                        <td>@aluno.Email</td>
                        <td>@aluno.Cep</td>
                        <td>
                            <div class="d-grid gap-2 d-md-block">
                                <a type="submit" class="btn btn-outline-primary" asp-controller="Alunos" asp-action="BuscarEndereco" asp-route-cep="@aluno.Cep">Endereco</a>
                                <a type="submit" class="btn btn-outline-primary" asp-controller="Alunos" asp-action="Editar" asp-route-id="@aluno.Id">Editar</a>
                                <a type="submit" class="btn btn-outline-primary" asp-controller="Alunos" asp-action="Excluir" asp-route-id="@aluno.Id">Excluir</a>
                            </div>
                        </td>
                    </tr>

                }


            }

        </tbody>
    </table>
    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <a class="btn btn-primary" type="button" asp-controller="Alunos" asp-action="Adicionar">adicionar novo aluno</a>
    </div>
</div>

