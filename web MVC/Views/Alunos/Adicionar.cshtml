@model AlunoModel

<form asp-controller="Alunos" asp-action="InserirAluno" method="post">


    <div>
        
        <label for="name" class="form-label">Nome</label>
        <input type="text" asp-for="Nome" class="form-control col col-md-6">
    </div>

    <div>
        
        <label for="name" class="form-label">Idade</label>
        <input type="text" asp-for="Idade" class="form-control col col-md-6">
    </div>

    <div>
        
        <label for="name" class="form-label">Contato</label>
        <input type="text" asp-for="Contato" class="form-control col col-md-6">
    </div>

    <div>
       
        <label for="name" class="form-label">Email</label>
        <input type="text" asp-for="Email" class="form-control col col-md-6">
    </div>

    <div>
       
        <label for="name" class="form-label">Cep</label>
        <input type="text" asp-for="Cep" class="form-control col col-md-6">
    </div>

    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
        <button class="btn-primary" type="submit">Adicionar</button>
        <button class="btn-primary" type="button">Voltar</button>
    </div>

</form>